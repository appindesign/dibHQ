<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/halfGrid"
    android:paddingTop="@dimen/halfGrid" >

    <TextView
        android:id="@+id/course"
        style="@style/firstLineText"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/course" />

    <TextView
        android:id="@+id/competitor"
        style="@style/firstLineText"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:text="@string/competitor" />

    <TextView
        android:id="@+id/club"
        style="@style/firstLineText"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:text="@string/club"
        android:textColor="@color/secondaryText" />

    <TextView
        android:id="@+id/classification"
        style="@style/firstLineText"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/classification"
        android:textColor="@color/primary" />

    <TextView
        android:id="@+id/time"
        style="@style/firstLineText"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/time" />

</LinearLayout><!-- From: file:/C:/Users/Appin/AndroidstudioProjects/dibHQ/dibHQ/src/main/res/layout-xlarge/result_slip_layout.xml -->