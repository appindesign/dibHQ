<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/halfGrid"
    android:paddingTop="@dimen/halfGrid" >

    <TextView
        android:id="@+id/course"
        style="@style/firstLineText"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/course" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3" >

        <TextView
            android:id="@+id/competitor"
            style="@style/firstLineText"
            android:layout_alignParentTop="true"
            android:text="@string/competitor" />

        <TextView
            android:id="@+id/club"
            style="@style/secondLineText"
            android:layout_below="@id/competitor"
            android:text="@string/club"
            android:textColor="@color/secondaryText" />
    </RelativeLayout>

    <TextView
        android:id="@+id/classification"
        style="@style/firstLineText"
        android:layout_width="0dp"
        android:layout_marginRight="@dimen/halfGrid"
        android:layout_weight="1"
        android:text="@string/classification"
        android:textColor="@color/primary" />

    <TextView
        android:id="@+id/time"
        style="@style/firstLineText"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/time" />

</LinearLayout><!-- From: file:/C:/Users/Appin/AndroidstudioProjects/dibHQ/dibHQ/src/main/res/layout-land/result_slip_layout.xml -->